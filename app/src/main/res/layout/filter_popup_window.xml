<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:focusable="false"
        android:background="@drawable/app_background"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/textViewFilterPopupWindowTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/textViewFilterPopupWindowTitle"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="310dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@android:color/white"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewPopupWindow"
                    android:layout_width="100dp"
                    android:layout_height="260dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_filter"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewFilterPopupWindowCountry"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/textViewFilterPopupWindowCountry"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAlignment="center"/>

                        <Spinner
                            android:id="@+id/spinnerFilterPopupWindowCountry"
                            android:background="@drawable/spinner_bg"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:autofillHints=""
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewFilterPopupWindowAge"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/textViewFilterPopupWindowAge"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            />

                        <EditText
                            android:id="@+id/editTextFilterPopupWindowAge"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:autofillHints=""
                            android:backgroundTint="#FFFFFF"
                            android:hint="@string/editTextFilterPopupWindowAgeHint"
                            android:inputType="number"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textColorLink="#FFFFFF"
                            android:textSize="15sp"
                            android:layout_marginEnd="7dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewFilterPopupWindowRank"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/textViewFilterPopupWindowRank"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAlignment="center"/>

                        <Spinner
                            android:id="@+id/spinnerFilterPopupWindowRank"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:autofillHints=""
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/spinner_bg"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewFilterPopupWindowMic"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/textViewFilterPopupWindowMic"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAlignment="center"/>

                        <Spinner
                            android:id="@+id/spinnerFilterPopupWindowMic"
                            android:background="@drawable/spinner_bg"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:autofillHints=""
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewFilterPopupWindowHours"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/textViewFilterPopupWindowHours"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAlignment="center"/>

                        <Spinner
                            android:id="@+id/spinnerFilterPopupWindowHours"
                            android:background="@drawable/spinner_bg"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:autofillHints=""
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="19sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/white"/>


        <Button
            android:id="@+id/buttonFilterPopupWindowSubmit"
            android:layout_width="209dp"
            android:layout_height="57dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:fontFamily="sans-serif-light"
            android:text="ZATWIERDŹ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#424242"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</RelativeLayout>