<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="@string/textViewNewPassword"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextOldPassword"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:hint="@string/editTextOldPassword"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:hint="@string/editTextNewPassword"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextRepeatNewPass"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:hint="@string/editTextRepeatNewPass"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center|bottom">

            <!-- while keyboard is open button goes higher but there is no enough-->
            <!-- space under edit texts so button is cutted, lower marginBottom seems-->
            <!-- to help but button is lower even without keyboard open what looks ugly-->
            <!-- android:windowSoftInputMode="adjustResize" maybe could help in <activity> in manifest?-->
            <!-- obviously if used right, its for some kind of adjusts -->
             <Button
                android:id="@+id/buttonChangeOldPassword"
                android:layout_width="209dp"
                android:layout_height="65dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg"
                android:fontFamily="sans-serif-light"
                android:text="@string/buttonForgot"
                android:textColor="#424242"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>