<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewResetPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/textViewNewPassword"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />


        </RelativeLayout>

        <EditText
            android:id="@+id/editTextOldPassword"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:hint="Podaj stare hasÅ‚o:"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:hint="@string/editTextNewPassword"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextRepeatNewPass"
            android:layout_width="326dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:hint="@string/editTextRepeatNewPass"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonChangeOldPassword"
            android:layout_width="259dp"
            android:layout_height="57dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/button_bg"
            android:fontFamily="sans-serif-light"
            android:text="@string/buttonForgot"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#424242"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>


</ScrollView>