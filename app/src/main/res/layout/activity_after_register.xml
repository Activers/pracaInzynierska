<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="@string/appTitle"
                android:textColor="#FFFFFF"
                android:textSize="55sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewContRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/textViewContRegister"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextImie"
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_below="@+id/textViewContRegister"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:autofillHints=""
                android:backgroundTint="#FFFFFF"
                android:hint="@string/editTextImie"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textColorLink="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextData"
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_below="@+id/editTextImie"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:autofillHints=""
                android:backgroundTint="#FFFFFF"
                android:hint="@string/editTextData"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textColorLink="#FFFFFF"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerCoutries"
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_below="@+id/editTextData"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:autofillHints=""
                android:backgroundTint="#FFFFFF"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textColorLink="#FFFFFF"
                android:entries="@array/ArrayCountries"
                />

            <ImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerCoutries"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:maxWidth="250px"
                android:maxHeight="350px"
                android:minWidth="250px"
                android:minHeight="350px"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/defaultpic"
                tools:srcCompat="@drawable/defaultpic" />

            <TextView
                android:id="@+id/textViewAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewAvatar"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="@string/textViewAddPic"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="209dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonbackground"
                android:fontFamily="sans-serif-light"
                android:text="@string/buttonRegister"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#424242"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>


</ScrollView>