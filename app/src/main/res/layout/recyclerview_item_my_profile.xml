<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_roots"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="15dp">

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="40dp">
    <!--app:cardBackgroundColor="#664666"-->

    <RelativeLayout
        android:id="@+id/list_root"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="14dp">


        <TextView
            android:id="@+id/textViewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/imageViewDelete"
            android:gravity="center"
            android:text="Gra"
            android:textColor="#424242"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/list_line"
            android:layout_width="300dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/imageViewDelete"
            android:layout_height="1dp"
            android:layout_below="@+id/textViewGame"
            android:background="#424242" />


        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_line"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/imageViewDelete"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Nick"
            android:textColor="#424242"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_cardview"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>
